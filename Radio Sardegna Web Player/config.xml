<?xml version='1.0' encoding='utf-8'?>
<widget id="com.csmwebmedia.radiosardegnawebplayer" version="1.0.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Radio Sardegna Web Player</name>
	<description>Resta In Ascolto!</description>
	<author
    href="https://www.csmwebmedia.com"
    email="d.martello@csmwebmedia.com">
    CSM WEBMEDIA - UG (Developper: Davide Martello)
  </author>

  <icon src="icon-128.png" width="128" height="128" />
  <icon src="icon-256.png" width="256" height="256" gap:role="default" />

  <content src="index.html" />

  <plugin name="cordova-plugin-whitelist" spec="1" />

  <access origin="*" />

  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <platform name="android">
      <allow-intent href="market:*" />
  </platform>

  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
  </platform>

  <!-- Android only preferences -->
  <preference name="KeepRunning" value="false"/>
  <preference name="LoadUrlTimeoutValue" value="10000"/>
  <preference name="permissions" value="none"/>
  <preference name="android-targetSdkVersion" value="27" />
  <preference name="orientation" value="portrait" />
  <preference name="fullscreen" value="true" />
  <preference name="deployment-target" value="8.0" />
  <preference name="android-minSdkVersion" value="16" />

